<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge"
    android:paddingStart="@dimen/value_5dp"
    android:paddingEnd="@dimen/value_5dp">

    <ImageView
        android:id="@+id/custom_poi_imageview"
        android:layout_width="@dimen/nearme_custom_poi_image_size"
        android:layout_height="@dimen/nearme_custom_poi_image_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/value_5dp"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/next_arrow_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/place_of_interest_list_margin"
        android:src="@drawable/ic_right_arrow"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rating_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/custom_poi_imageview"
        android:layout_toStartOf="@id/next_arrow_imageview"
        android:paddingStart="@dimen/value_5dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/text_size_15sp"
            android:layout_marginBottom="@dimen/value_3dp"/>

        <TextView
            android:id="@+id/address_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_textview"
            android:textSize="@dimen/text_size_12sp"
            android:maxLines="1"
            />

    </RelativeLayout>

</RelativeLayout>